<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

    <display-name>Template</display-name>
    <description>
      An empty project to use as a template for your own ones
    </description>
	
    <!-- Define servlets that are included in the application -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlets.Login</servlet-class>
        <load-on-startup>2</load-on-startup>     <!-- we first load the register servlet, then the login one -->
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlets.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>servlets.Register</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>GestioneSfida</servlet-name>
        <servlet-class>servlets.GestioneSfida</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GestioneSfida</servlet-name>
        <url-pattern>/gestioneSfida</url-pattern>
    </servlet-mapping>

	<!-- Welcome pages -->
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
        <welcome-file>register.jsp</welcome-file>
		<welcome-file>home.jsp</welcome-file>
	</welcome-file-list>
		
	<!-- Handle exceptions and errors -->
	 
</web-app>
